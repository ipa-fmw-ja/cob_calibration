<?xml version="1.0"?>
<launch>

    <!-- run image_capture node -->
    <node name="image_capture" pkg="cob_image_capture" type="image_capture.py" args="" output="screen">
        <!-- set to 3 cameras -->
        <param name="number_of_cameras" value="3" />

        <!-- configure cameras --> 
        <param name="camera0"       value="/cam3d/rgb/image_raw" />
        <param name="file_prefix0"  value="kinect_" />
        
        <param name="camera1"       value="/stereo/left/image_raw" />
        <param name="file_prefix1"  value="left_" />

        <param name="camera2"       value="/stereo/right/image_raw" />
        <param name="file_prefix2"  value="right_" />

       

        <!-- set output folder -->
        <param name="output_folder" value="/tmp/cal/intrinsic" />
    </node>

    <!-- create tmp directory -->
    <param name="mkdir_tmp" command="mkdir -m 777 -p /tmp/cal/intrinsic" />

</launch>
